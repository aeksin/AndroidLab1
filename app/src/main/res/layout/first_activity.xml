<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnterGreetingActivity">

    <TextView
        android:id="@+id/greetingTextView"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_above="@+id/greetingEditText"
        android:layout_centerVertical="true"
        android:layout_marginBottom="11dp"
        android:textAlignment="center"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/greetingEditText"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:hint="@string/greeting_edittext_hint"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/greetingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/greetingEditText"
        android:layout_centerInParent="true"
        android:onClick="goToNextWindow"
        android:text="@string/greeting_button_text" />

</RelativeLayout>